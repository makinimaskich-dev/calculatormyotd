            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .calculator {
            border: 1px solid #ccc;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
            width: 320px;
            background-color: #2c3e50; /* Corpo da calculadora (azul escuro) */
            padding: 20px;
        }

        .calculator-screen {
            width: 100%;
            height: 70px;
            background-color: #222;
            color: #fff;
            text-align: right;
            padding: 0 15px; 
            font-size: 3rem; 
            border: none;
            border-radius: 8px;
            margin-bottom: 15px;
            box-sizing: border-box; 
            overflow: hidden; 
        }

        .calculator-keys {
            display: grid;
            grid-template-columns: repeat(4, 1fr); 
            grid-gap: 12px; 
        }

        .calculator-keys button {
            height: 65px; 
            border: none;
            border-radius: 8px;
            font-size: 1.6rem;
            cursor: pointer;
            background-color: #ecf0f1; /* Botões numéricos (cinza claro) */
            transition: background-color 0.1s, transform 0.05s;
        }

        .calculator-keys button:hover {
            background-color: #bdc3c7;
        }
        
        .calculator-keys button:active {
            transform: scale(0.95); 
        }

        .operator {
            background-color: #f39c12 !important; /* Laranja */
            color: white;
        }

        .equal-sign {
            grid-column: 4 / 5; 
            grid-row: 5 / 6; 
            background-color: #2ecc71 !important; /* Verde */
        }

        .all-clear {
            background-color: #e74c3c !important; /* Vermelho */
            color: white;
        }
        
        /* Ajustes de hover para as cores */
        .operator:hover { background-color: #e67e22 !important; }
        .equal-sign:hover { background-color: #27ae60 !important; }
        .all-clear:hover { background-color: #c0392b !important; }
    </style>
